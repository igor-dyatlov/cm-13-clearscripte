# SETTING THEME & FONT
ini_set("force_colorspace","rgba");
fontresload("0", "ttf/Roboto-Regular.ttf", "12");
fontresload("1", "ttf/Roboto-Regular.ttf", "14");
theme("material_green");

# INITIALIZING ROM INFOMATION
ini_set("rom_name",             "Nexusfication");
