ini_set("rom_date",             "Mar, 27 2016");

# SHOW SIMPLE SPLASH
splash(
    2000,
    "sample"
);

# LANGUAGE SELECTION
include("language_select.edify");

# MENU POSITION
gotolabel("aroma_menubox");

